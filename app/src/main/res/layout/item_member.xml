<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jsbn.mgr.widget.MaterialRippleLayout
            android:id="@+id/member_root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleAlpha="0.1"
            app:rippleColor="#44585858"
            app:rippleDelayClick="false"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/item_head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/item_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名：-"
                        android:textColor="@color/gray_800" />

                    <TextView
                        android:id="@+id/item_profession_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="职业：-"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/item_gender_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="性别：-"
                        android:textColor="@color/gray_600" />
                </LinearLayout>
            </LinearLayout>
        </com.jsbn.mgr.widget.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>