<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gray_900"
        app:title="修改密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jsbn.mgr.widget.common.EditText
                android:id="@+id/update_oldPwd_edit"
                style="@style/Material.Widget.EditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="旧密码"
                android:inputType="textPassword"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="#FF000000"
                android:textColorHint="@color/gray_500"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                app:et_dividerColor="@color/edit_text_line_state"
                app:et_dividerErrorColor="#FFFF0000"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="8dp"
                app:et_helper=""
                app:et_inputId="@+id/textfield_et_helper_input"
                app:et_labelTextColor="@drawable/color_label"
                app:et_supportMode="helper"
                app:et_supportPadding="5dp"
                app:et_supportTextErrorColor="#FFFF0000" />

            <com.jsbn.mgr.widget.common.EditText
                android:id="@+id/update_newPwd_edit"
                style="@style/Material.Widget.EditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="新密码"
                android:inputType="textPassword"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="#FF000000"
                android:textColorHint="@color/gray_500"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                app:et_dividerColor="@color/edit_text_line_state"
                app:et_dividerErrorColor="#FFFF0000"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="8dp"
                app:et_helper=""
                app:et_inputId="@+id/textfield_et_helper_input"
                app:et_labelTextColor="@drawable/color_label"
                app:et_supportMode="helper"
                app:et_supportPadding="5dp"
                app:et_supportTextErrorColor="#FFFF0000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="right"
            android:orientation="vertical">

            <com.jsbn.mgr.widget.common.Button
                android:id="@+id/update_btn"
                style="@style/RaiseColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_btn_bg"
                android:text="修改密码"
                android:textSize="17sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
