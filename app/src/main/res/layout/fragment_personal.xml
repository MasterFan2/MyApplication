<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_200"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/head_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名：-"
                    android:textColor="@color/gray_800" />

                <TextView
                    android:id="@+id/profession_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="职业：-"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:id="@+id/gender_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="性别：-"
                    android:textColor="@color/gray_600" />
            </LinearLayout>
        </LinearLayout>
        <!-- end head -->

        <com.jsbn.mgr.widget.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:rippleAlpha="0.1"
            app:rippleColor="@color/gray_100"
            app:rippleDelayClick="false"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <TextView
                android:id="@+id/memberTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="我的组员" />
        </com.jsbn.mgr.widget.MaterialRippleLayout>

        <com.jsbn.mgr.widget.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:rippleAlpha="0.1"
            app:rippleColor="@color/gray_100"
            app:rippleDelayClick="false"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <TextView
                android:id="@+id/modifyTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="修改密码" />
        </com.jsbn.mgr.widget.MaterialRippleLayout>

        <com.jsbn.mgr.widget.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:rippleAlpha="0.1"
            app:rippleColor="@color/gray_100"
            app:rippleDelayClick="false"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/logout_btn_bg"
                android:text="退出登录"
                android:textColor="@color/red_error" />
        </com.jsbn.mgr.widget.MaterialRippleLayout>
    </LinearLayout>


</RelativeLayout>