<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
        <com.jsbn.mgr.widget.masterfan.MasterTitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleBackground="@color/gray_900"
            app:titleText="个人中心"
            app:leftButtonHide="true"
            app:titleTxtColor="@android:color/white"
            app:rightButtonHide="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:background="@color/gray_400"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名：-"
            android:padding="16dp"
            android:textColor="@color/gray_800" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:background="@color/gray_400"
            />
        <TextView
            android:id="@+id/profession_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职业：-"
            android:padding="16dp"
            android:textColor="@color/gray_600" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:background="@color/gray_400"
            />
        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别：-"
            android:padding="16dp"
            android:textColor="@color/gray_600" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:background="@color/gray_400"
            />
        <com.jsbn.mgr.widget.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleAlpha="0.1"
            app:rippleColor="@color/gray_100"
            app:rippleDelayClick="false"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <TextView
                android:id="@+id/modifyTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="修改密码" />
        </com.jsbn.mgr.widget.MaterialRippleLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:background="@color/gray_400"
            />
        <com.jsbn.mgr.widget.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleAlpha="0.1"
            app:rippleColor="@color/gray_100"
            app:rippleDelayClick="false"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <TextView
                android:id="@+id/memberTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="我的组员" />
        </com.jsbn.mgr.widget.MaterialRippleLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:background="@color/gray_400"
            />


        <com.jsbn.mgr.widget.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:rippleAlpha="0.1"
            app:rippleColor="@color/gray_100"
            app:rippleDelayClick="false"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/logout_btn_bg"
                android:text="退出登录"
                android:textColor="@color/red_error" />
        </com.jsbn.mgr.widget.MaterialRippleLayout>
    </LinearLayout>


</RelativeLayout>