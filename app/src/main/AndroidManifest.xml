<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.jsbn.mgr"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MgrApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.launcher.LauncherActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.UpdatePwdActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.member.MyMemberActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.upgrade.UpgradeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MTDialog"/>
        <activity
            android:name=".ui.member.MemberScheduleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.planner.PlannerScheduleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.planner.AddCustomerActivity"
            android:label="@string/title_activity_add_customer">
        </activity>
        <activity
            android:name=".ui.planner.CustomerSelectF4Activity"
            android:label="@string/title_activity_customer_select_f4">
        </activity>
        <activity
            android:name=".ui.planner.F4Activity"
            android:label="@string/title_activity_f4">
        </activity>
    </application>

</manifest>
